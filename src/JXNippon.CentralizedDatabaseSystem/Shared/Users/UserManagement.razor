@using JXNippon.CentralizedDatabaseSystem.Shared.Commons

<Layout Class="layout-view">
    <Header>
        <div class="row">
            <div class="col-3">
                <span>User Management</span>
            </div>
            <div class="col-9 float-right align-items-center text-right mt-1">
                <Space Size="@("middle")">
                    <SpaceItem>
                        <Search Size="@("large")" Placeholder="Search user..." Style="20vw;" OnChange=@(args => ReloadAsync(null)) @bind-Value=search ClassicSearchIcon/>
                    </SpaceItem>
                    <SpaceItem>
                        <Button Type="primary" Size="@("large")" Shape="@ButtonShape.Round" OnClick=@(args => ReloadAsync(null))>
                            <ChildContent>
                                <Icon Type="reload" Theme="outline" Class="anticon-big"/><span style="font-size: 18px; margin-left: 10px;">Reload</span>
                            </ChildContent>
                        </Button>
                    </SpaceItem>
                </Space>
            </div>
        </div>       
    </Header>
    <Layout Style="height: 100%;">
        <Sider Class="d-none d-lg-inline" Collapsible>
            <Menu DefaultSelectedKeys=@(new[] { "All" }) Style="height: 100%;" Mode=@MenuMode.Inline @ref=menu OnMenuItemClicked=OnMenuItemSelectAsync>
                <MenuItem Key="All">         
                    <ChildContent>
                        <span style="font-size: 16px; margin-left: 0px;">All</span>
                    </ChildContent>
                </MenuItem>
                <CollectionView Items=@this.roles TItem=Role ShowEmpty=false>
                    <ChildContent Context="role">
                        <MenuItem Key="@role.Name">
                            <ChildContent>
                                <span style="font-size: 16px; margin-left: 0px;">@role.Name</span>
                            </ChildContent>                
                        </MenuItem>
                    </ChildContent>               
                </CollectionView>
            </Menu>
        </Sider>
        <Content Style="overflow-y: auto; overflow-x:hidden; height:100%;">
            <UserDataList @ref=userDataList></UserDataList>
        </Content>
    </Layout>
</Layout>