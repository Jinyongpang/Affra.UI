@using CentralizedDatabaseSystemODataService.Affra.Service.CentralizedDatabaseSystem.Domain.GasCondensateExportSamplerAndExportLines

<div class="row">
    <div class="col">
        <RadzenButton Click="@ReloadAsync" Text="Refresh" Icon="refresh" ButtonStyle="ButtonStyle.Light" Style="margin-bottom: 20px;" Visible="@ShowRefreshButton" />
        <RadzenDataGrid @ref="grid" IsLoading="@isLoading" Count="@Count" Data="@items" LoadData="@LoadDataAsync" 
            FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive" AllowSorting="true" AllowFiltering="false" AllowPaging="true" 
            PageSize="10" PagerHorizontalAlign="HorizontalAlign.Center" TItem="DailyGasCondensateExportSamplerAndExportLine" 
            ColumnWidth="200px" AllowColumnResize="true" ShowPagingSummary="true" 
            AllowMultiColumnSorting="true" ShowMultiColumnSortingIndex="true"
            PagerAlwaysVisible="@PagerAlwaysVisible" CellContextMenu="@OnCellContextMenu">
            <EmptyTemplate>                
                <div class="row" @oncontextmenu=@(args => OnCellContextMenu(args)) @oncontextmenu:preventDefault="true">
                    <a>No records to display.</a>
                </div>                    
            </EmptyTemplate>
            <Columns>
                <RadzenDataGridColumn TItem="DailyGasCondensateExportSamplerAndExportLine" Property="LastPiggingDate" Title="Last Pigging Date" Visible="@ShowDateColumn">
                    <Template Context="dailyGasCondensateExportSamplerAndExportLine">
                        @String.Format(System.Globalization.CultureInfo.CurrentCulture, "{0:d}", dailyGasCondensateExportSamplerAndExportLine.LastPiggingDateUI)
                    </Template>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="DailyGasCondensateExportSamplerAndExportLine" Property="NextPiggingDate" Title="Next Pigging Date" Visible="@ShowDateColumn">
                    <Template Context="dailyGasCondensateExportSamplerAndExportLine">
                        @String.Format(System.Globalization.CultureInfo.CurrentCulture, "{0:d}", dailyGasCondensateExportSamplerAndExportLine.NextPiggingDateUI)
                    </Template>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="DailyGasCondensateExportSamplerAndExportLine" Property="TrunkLinePressure" Title="Trunk Line Pressure" />
                <RadzenDataGridColumn TItem="DailyGasCondensateExportSamplerAndExportLine" Property="PV2901SP" Title="PV-2901 SP" />
                <RadzenDataGridColumn TItem="DailyGasCondensateExportSamplerAndExportLine" Property="GasSamplerId" Title="Gas Sampler Id" />
                <RadzenDataGridColumn TItem="DailyGasCondensateExportSamplerAndExportLine" Property="LastChangeOut" Title="Last Change Out" Visible="@ShowDateColumn">
                    <Template Context="dailyGasCondensateExportSamplerAndExportLine">
                        @String.Format(System.Globalization.CultureInfo.CurrentCulture, "{0:d}", dailyGasCondensateExportSamplerAndExportLine.LastChangeOutDateUI)
                    </Template>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="DailyGasCondensateExportSamplerAndExportLine" Property="GasSamplerContent" Title="Gas Sampler Content (ml)" />
                <RadzenDataGridColumn TItem="DailyGasCondensateExportSamplerAndExportLine" Property="NextChangeOut" Title="Next Change Out" Visible="@ShowDateColumn">
                    <Template Context="dailyGasCondensateExportSamplerAndExportLine">
                        @String.Format(System.Globalization.CultureInfo.CurrentCulture, "{0:d}", dailyGasCondensateExportSamplerAndExportLine.NextChangeOutDateUI)
                    </Template>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="DailyGasCondensateExportSamplerAndExportLine" Property="CondySamplerId" Title="Condy Sampler Id" />
                <RadzenDataGridColumn TItem="DailyGasCondensateExportSamplerAndExportLine" Property="LastSampling" Title="Last Sampling" Visible="@ShowDateColumn">
                    <Template Context="dailyGasCondensateExportSamplerAndExportLine">
                        @String.Format(System.Globalization.CultureInfo.CurrentCulture, "{0:d}", dailyGasCondensateExportSamplerAndExportLine.LastSamplingDateUI)
                    </Template>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="DailyGasCondensateExportSamplerAndExportLine" Property="CondySamplerContent" Title="Condy Sampler Content (ml)" />
                <RadzenDataGridColumn TItem="DailyGasCondensateExportSamplerAndExportLine" Property="NextSampling" Title="Next Sampling" SortOrder="SortOrder.Descending" Visible="@ShowDateColumn">
                    <Template Context="dailyGasCondensateExportSamplerAndExportLine">
                        @String.Format(System.Globalization.CultureInfo.CurrentCulture, "{0:d}", dailyGasCondensateExportSamplerAndExportLine.NextSamplingDateUI)
                    </Template>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="DailyGasCondensateExportSamplerAndExportLine" Property="Date" Title="Date" SortOrder="SortOrder.Descending" Visible="@ShowDateColumn">
                    <Template Context="dailyGasCondensateExportSamplerAndExportLine">
                        @String.Format(System.Globalization.CultureInfo.CurrentCulture, "{0:d}", dailyGasCondensateExportSamplerAndExportLine.DateUI)
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>  
    </div>
</div>

@code
{
    private void OnCellContextMenu(MouseEventArgs args)
    {
        bool hasRowData = (args as DataGridCellMouseEventArgs<DailyGasCondensateExportSamplerAndExportLine>) != null;
        ContextMenuService.Open(args, ds =>
           @<RadzenMenu Click="@(e => OnMenuItemClickAsync(args as DataGridCellMouseEventArgs<DailyGasCondensateExportSamplerAndExportLine>, e))">
                <RadzenMenuItem Text="Add ..." Value="0" Icon="note_add"/>
                <RadzenMenuItem Text="Edit ..." Value="1" Icon="description" Visible=@hasRowData/>
                <RadzenMenuItem Text="Delete ..." Value="2" Icon="delete" Visible=@hasRowData/>
                <RadzenMenuItem Text="View ..." Value="3" Icon="launch" Visible=@hasRowData/>
                <RadzenMenuItem Text="Refresh" Value="4" Icon="refresh"/>
            </RadzenMenu>
    );  
    }
    private async Task OnMenuItemClickAsync(DataGridCellMouseEventArgs<DailyGasCondensateExportSamplerAndExportLine> args, MenuItemEventArgs e)
    {
        int i = (int)e.Value;
        if (i == 0)
        {
            await ShowDialogAsync(new DailyGasCondensateExportSamplerAndExportLine() 
                { 
                    DateUI = DateTimeOffset.Now.Date,
                    LastPiggingDateUI = DateTimeOffset.Now.Date,
                    NextPiggingDateUI = DateTimeOffset.Now.Date,
                    LastSamplingDateUI = DateTimeOffset.Now.Date,
                    NextSamplingDateUI = DateTimeOffset.Now.Date,
                    LastChangeOutDateUI = DateTimeOffset.Now.Date,
                    NextChangeOutDateUI = DateTimeOffset.Now.Date,
                }, i, "Add");
        }
        else if (i == 1)
        {
            await ShowDialogAsync(args.Data, i, "Edit");
        }
        else if (i == 2)
        {
            await ShowDialogAsync(args.Data, i, "Delete");
        }
        else if (i == 3)
        {
            await ShowDialogAsync(args.Data, i, "View");
        }
        else if (i == 4)
        {
            await grid.Reload();      
        }
    }
}