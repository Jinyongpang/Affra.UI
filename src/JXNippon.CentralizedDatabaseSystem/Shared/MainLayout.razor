@inherits LayoutComponentBase
<RadzenNotification />
<RadzenTooltip />
<RadzenContextMenu />
<RadzenDialog />
<div class="page">
    <div class="sidebar @NavMenuCssClass">
        <NavMenu />
    </div>

    <main>
        <nav class="navbar navbar-light bg-light sticky-top auth" style="height: 3.5rem;">
          <div class="container-fluid">
            <div class="navbar-brand"><h3 class="toprow-title"><i class="oi oi-aperture"></i> Centralized Database System</h3></div>
            <div class="d-flex">
                <LoginDisplay  />
            </div>
          </div>
        </nav>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
@code {
    [CascadingParameter] private AppState AppState { get; set; }

    private string? NavMenuCssClass => AppState.CollapseNavMenu ? "collapseSideBar" : "expandSideBar";
}
