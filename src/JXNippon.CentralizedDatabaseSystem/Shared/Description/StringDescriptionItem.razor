@typeparam TItem

<DescriptionsItem Span=@(Span ?? 1)>
    <TitleTemplate>
        <a>@(stringLocalizer[Title])</a>
    </TitleTemplate>
    <ChildContent>
        <StringDescriptionItemEdit TItem="TItem" Item="@this.Item" ItemId="@this.ItemId" OnStringValChanged="@this.ValueChanged" @bind-StringVal=@this.Value></StringDescriptionItemEdit>
    </ChildContent>
</DescriptionsItem>
