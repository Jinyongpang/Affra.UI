@typeparam TItem

@if (isEditing)
{
     <td class="ant-descriptions-item-content col-sm-12 col-md-2" colspan="1">
        <div class="d-flex justify-content-center">
            <RadzenNumeric @bind-Value=@this.Decimal TValue="decimal?" Change="StopEdit" ShowUpDown="false" MouseLeave="MouseLeave"></RadzenNumeric>
        </div>
     </td>
}
else
{
    <td class="ant-descriptions-item-content col-sm-12 col-md-2" style="cursor:pointer; min-height: 30px; @this.GetStyle()" colspan="1" @onclick="StartEdit">
        <div class="d-flex justify-content-center" >
            @if (this.Decimal != null)
            {
                @this.Decimal
                ;
            }
            else if(!this.IsRequired)
            {
                @this.DefaultStringValue
            }
        </div>
    </td>
    
}
     