@typeparam TItem

<DescriptionsItem Span=@(Span ?? 1)>
    <TitleTemplate>
        <a>@(stringLocalizer[Title])</a>
    </TitleTemplate>
    <ChildContent>
        <DecimalDescriptionItemEdit TItem="TItem" Item="@this.Item" ItemId="@this.ItemId" OnDecimalChanged="@this.ValueChanged" @bind-Decimal=@this.Value></DecimalDescriptionItemEdit>
    </ChildContent>
</DescriptionsItem>
