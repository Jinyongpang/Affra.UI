@typeparam TItem

<DescriptionsItem Span=@(Span ?? 1)>
    <TitleTemplate>
        <a>@(stringLocalizer[Title])</a>
    </TitleTemplate>
    <ChildContent>
        <DateDescriptionItemEdit TItem="TItem" Item="@this.Item" ItemId="@this.ItemId" OnDateChanged="@this.ValueChanged" @bind-Date=@this.Value></DateDescriptionItemEdit>
    </ChildContent>
</DescriptionsItem>
