@using CentralizedDatabaseSystemODataService.Affra.Service.CentralizedDatabaseSystem.Domain.SandDisposalDesanders

<div class="row">
    <div class="col">
        <RadzenButton Click="@ReloadAsync" Text="Refresh" Icon="refresh" ButtonStyle="ButtonStyle.Light" Style="margin-bottom: 20px;" Visible="@ShowRefreshButton" />
        <RadzenDataGrid @ref="grid" IsLoading="@isLoading" Count="@Count" Data="@items" LoadData="@LoadDataAsync" 
            FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive" AllowSorting="true" AllowFiltering="false" AllowPaging="true" 
            PageSize="10" PagerHorizontalAlign="HorizontalAlign.Center" TItem="DailySandDisposalDesander" 
            ColumnWidth="200px" AllowColumnResize="true" ShowPagingSummary="true" 
            AllowMultiColumnSorting="true" ShowMultiColumnSortingIndex="true"
            PagerAlwaysVisible="@PagerAlwaysVisible">

            <Columns>
                <RadzenDataGridColumn TItem="DailySandDisposalDesander" Property="SandDisposalDesanderName" Title="Desander Name" />
                <RadzenDataGridColumn TItem="DailySandDisposalDesander" Property="Status" Title="Status">
                    <Template Context="item">
                        <StatusGridColumnTemplate Status="@(item.Status)"></StatusGridColumnTemplate>
                    </Template>           
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="DailySandDisposalDesander" Property="Remark" Title="Remark" />
                <RadzenDataGridColumn TItem="DailySandDisposalDesander" Property="LastSandJettingDate" Title="Last Sand Jetting Date" />
                <RadzenDataGridColumn TItem="DailySandDisposalDesander" Property="NextSandJettingDate" Title="Next Sand Jetting Date" />
                <RadzenDataGridColumn TItem="DailySandDisposalDesander" Property="EastClusterJettingCycleNumber" Title="No. of East Cluster Jetting Cycle" />
                <RadzenDataGridColumn TItem="DailySandDisposalDesander" Property="WestClusterJettingCycleNumber" Title="No. of West Cluster Jetting Cycle" />
                <RadzenDataGridColumn TItem="DailySandDisposalDesander" Property="DrumCollectedNumber" Title="No. of Drum Collected" />
                <RadzenDataGridColumn TItem="DailySandDisposalDesander" Property="AccumulatedSandDisposed" Title="Accumulated Sand Disposed" />
                <RadzenDataGridColumn TItem="DailySandDisposalDesander" Property="HighestMercuryReading" Title="Highest Mercury Reading" />
                <RadzenDataGridColumn TItem="DailySandDisposalDesander" Property="Remark1" Title="Remarks" />
                <RadzenDataGridColumn TItem="DailySandDisposalDesander" Property="Date" Title="Date" SortOrder="SortOrder.Descending" Visible="@ShowDateColumn">
                    <Template Context="item">
                        @String.Format(System.Globalization.CultureInfo.CurrentCulture, "{0:d}", item.Date.ToLocalTime())
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>  
    </div>
</div>