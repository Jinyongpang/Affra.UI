@using CentralizedDatabaseSystemODataService.Affra.Service.CentralizedDatabaseSystem.Domain.Logistics
@page "/LogisticDialog"
@layout MainLayout

<PageTitle>Logistic Dialog</PageTitle>
<RadzenTemplateForm Data="@Item" Submit="@( async (DailyLogistic args) => { await SubmitAsync(args); })">
    <div class="row">
        <div class="col">
            <RadzenCard>
                 <div class="row">
                    <div class="col-md-4 align-items-center d-flex">
                        <RadzenLabel class="dialogTextSize" Text="Logistic Name" />
                    </div>
                    <div class="col-md-8">
                            <RadzenTextBox class="dialogTextSize" @bind-Value="@Item.LogisticName" Disabled="@(MenuAction == "Detail" ? true : false)"></RadzenTextBox>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 align-items-center d-flex">
                        <RadzenLabel class="dialogTextSize" Text="Remarks" />
                    </div>
                    <div class="col-md-8">
                        <RadzenTextBox class="dialogTextSize" @bind-Value="@Item.Remark" Disabled="@(MenuAction == "Detail" ? true : false)"></RadzenTextBox>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-md-12 d-flex align-items-end justify-content-center" style="margin-top: 16px;">
                        <RadzenButton ButtonType="ButtonType.Submit" Icon="save" Text="Save" Visible="@(MenuAction == "Detail" ? false : true)" />
                        <RadzenButton ButtonStyle="ButtonStyle.Light" Icon="cancel" style="display: inline-block; margin-left: 10px;" Text="Cancel" Click="@Cancel"/>
                    </div>
                </div>
            </RadzenCard>
        </div>
    </div>
</RadzenTemplateForm>
