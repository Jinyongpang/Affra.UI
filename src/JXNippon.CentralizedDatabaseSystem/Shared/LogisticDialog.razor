@using CentralizedDatabaseSystemODataService.Affra.Service.CentralizedDatabaseSystem.Domain.Logistics
@page "/LogisticDialog"
@layout MainLayout

<PageTitle>Logistic Dialog</PageTitle>
<RadzenTemplateForm Data="@Item" Submit="@( async (DailyLogistic args) => { await SubmitAsync(args); })">
    <div class="row">
        <div class="col">
            <RadzenCard>
                 <div class="row py-2">
                    <div class="col-4 align-items-center d-flex">
                        <RadzenLabel class="dialogTextSize" Text="Logistic Name" />
                    </div>
                    <div class="col-8">
                       <RadzenTextBox class="dialogTextSize w-100" @bind-Value="@Item.LogisticName"></RadzenTextBox>
                    </div>
                </div>
                <div class="row py-2">
                    <div class="col-4 align-items-center d-flex">
                        <RadzenLabel class="dialogTextSize" Text="Remarks" />
                    </div>
                    <div class="col-8">
                        <RadzenTextArea class="dialogTextSize w-100" Placeholder="Enter remark..." @bind-Value="@Item.Remark"></RadzenTextArea>
                    </div>
                </div>
                <div class="row py-2">
                    <div class="col-4 align-items-center d-flex">
                        <RadzenLabel class="dialogTextSize" Text="Date" />
                    </div>
                    <div class="col-8">
                        <RadzenDatePicker class="dialogTextSize w-100" DateFormat="d" @bind-Value="@Item.Date" ShowTime="false"></RadzenDatePicker>
                    </div>
                </div>
                <div class="row justify-content-center py-4">
                    <div class="col-md-12 d-flex align-items-end justify-content-center">
                        <RadzenButton ButtonType="ButtonType.Submit" Icon="save" Text="Save" />
                        <RadzenButton ButtonStyle="ButtonStyle.Light" Icon="cancel" style="display: inline-block; margin-left: 10px;" Text="Cancel" Click="@Cancel"/>
                    </div>
                </div>
            </RadzenCard>
        </div>
    </div>
</RadzenTemplateForm>
