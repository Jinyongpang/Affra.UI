@using CentralizedDatabaseSystemODataService.Affra.Service.CentralizedDatabaseSystem.Domain.CoolingMediumSystems

<div class="row">
    <div class="col">
        <RadzenButton Click="@ReloadAsync" Text="Refresh" Icon="refresh" ButtonStyle="ButtonStyle.Light" Style="margin-bottom: 20px;" Visible="@ShowRefreshButton" />
        <RadzenDataGrid @ref="grid" IsLoading="@isLoading" Count="@Count" Data="@items" LoadData="@LoadDataAsync" 
            FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive" AllowSorting="true" AllowFiltering="false" AllowPaging="true" 
            PageSize="10" PagerHorizontalAlign="HorizontalAlign.Center" TItem="DailyAnalysisResult" 
            ColumnWidth="200px" AllowColumnResize="true" ShowPagingSummary="true" 
            AllowMultiColumnSorting="true" ShowMultiColumnSortingIndex="true"
            PagerAlwaysVisible="@PagerAlwaysVisible" CellContextMenu="@OnCellContextMenu">
            <EmptyTemplate>                
                <div class="row" @oncontextmenu=@(args => OnCellContextMenu(args)) @oncontextmenu:preventDefault="true">
                    <a>No records to display.</a>
                </div>                    
            </EmptyTemplate>
            <Columns>
                <RadzenDataGridColumn TItem="DailyAnalysisResult" Property="PhReading" Title="ph Reading"/>
                <RadzenDataGridColumn TItem="DailyAnalysisResult" Property="PhReadingRange" Title="pH Reading Range"/>
                <RadzenDataGridColumn TItem="DailyAnalysisResult" Property="Iron" Title="Iron"/>
                <RadzenDataGridColumn TItem="DailyAnalysisResult" Property="IronRange" Title="Iron Range"/>
                <RadzenDataGridColumn TItem="DailyAnalysisResult" Property="Salinity" Title="Salinity"/>
                <RadzenDataGridColumn TItem="DailyAnalysisResult" Property="Nitrite" Title="Nitrite"/>
                <RadzenDataGridColumn TItem="DailyAnalysisResult" Property="NitriteRange" Title="Nitrite Range"/>
                <RadzenDataGridColumn TItem="DailyAnalysisResult" Property="CMFilterS6970" Title="CM Filter S-6970"/>
                <RadzenDataGridColumn TItem="DailyAnalysisResult" Property="CMFilterS6970Range" Title="CM Filter S-6970 Range"/>
                <RadzenDataGridColumn TItem="DailyAnalysisResult" Property="Date" Title="Date" SortOrder="SortOrder.Descending" Visible="@ShowDateColumn">
                    <Template Context="item">
                        @String.Format(System.Globalization.CultureInfo.CurrentCulture, "{0:d}", item.Date.ToLocalTime())
                    </Template>
                </RadzenDataGridColumn>
            </Columns>
        </RadzenDataGrid>  
    </div>
</div>

@code
{
    private void OnCellContextMenu(MouseEventArgs args)
    {
        bool hasRowData = (args as DataGridCellMouseEventArgs<DailyAnalysisResult>) != null;
        ContextMenuService.Open(args, ds =>
           @<RadzenMenu Click="@(e => OnMenuItemClickAsync(args as DataGridCellMouseEventArgs<DailyAnalysisResult>, e))">
                <RadzenMenuItem Text="Add ..." Value="0" Icon="note_add"/>
                <RadzenMenuItem Text="Edit ..." Value="1" Icon="description"/>
                <RadzenMenuItem Text="Delete ..." Value="2" Icon="delete" />
                <RadzenMenuItem Text="View ..." Value="3" Icon="launch" />
                <RadzenMenuItem Text="Refresh" Value="4" Icon="refresh"/>
            </RadzenMenu>
    );  
    }
    private async Task OnMenuItemClickAsync(DataGridCellMouseEventArgs<DailyAnalysisResult> args, MenuItemEventArgs e)
    {
        int i = (int)e.Value;
        if (i == 0)
        {
            await ShowDialogAsync(new DailyAnalysisResult() { Date = DateTimeOffset.Now.Date }, i, "Add");
        }
        else if (i == 1)
        {
            args.Data.Date = args.Data.Date.ToLocalTime();
            await ShowDialogAsync(args.Data, i, "Edit");
        }
        else if (i == 2)
        {
            await ShowDialogAsync(args.Data, i, "Delete");
        }
        else if (i == 3)
        {
            args.Data.Date = args.Data.Date.ToLocalTime();
            await ShowDialogAsync(args.Data, i, "View");
        }
        else if (i == 4)
        {
            await grid.Reload();      
        }
    }
}