@page "/GenericConfirmationDialog"
@layout MainLayout

<PageTitle>Confirmation Dialog</PageTitle>

<div class="row">
    <div class="col">
        <RadzenCard>
            <div class="row">
                <div class="col-md-12 align-items-center justify-content-center d-flex">
                    <RadzenLabel class="dialogTextSize title" Text="Are you sure?" />
                </div>
            </div>
            <br />
            <div class="row justify-content-center">
                <div class="col-md-12 d-flex align-items-end justify-content-center" style="margin-top: 16px;">
                    <RadzenButton ButtonStyle="ButtonStyle.Warning" Icon="warning_amber" Text="Yes" Click="@ConfirmClicked" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Icon="cancel" style="display: inline-block; margin-left: 10px;" Text="No" Click="@CancelClicked"/>
                </div>
            </div>
        </RadzenCard>
    </div>
</div>