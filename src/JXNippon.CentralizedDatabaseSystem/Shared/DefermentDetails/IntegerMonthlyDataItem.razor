@typeparam TItem

@if (isEditing)
{
     <td class="" colspan="1">
        <div class="d-flex justify-content-center">
            <RadzenNumeric @bind-Value=@this.Value TValue="int" Change="StopEdit" ShowUpDown="false" MouseLeave="MouseLeave"></RadzenNumeric>
        </div>
     </td>
}
else
{
    <td class="text-center" style="cursor:pointer; min-height: 30px;background-color:#FCE4D6; @this.GetStyle()" colspan="1" @onclick="StartEdit">
        <div class="d-flex justify-content-center" >
            @if (this.Value != null)
            {
                @this.Value;
            }
        </div>
    </td>
    
}
     