                </div>
            </div>
            <div class="row py-2">
                <div class="col-4 align-items-center d-flex">
                    <RadzenLabel class="dialogTextSize" Text="Condensate Water Cut Meter Remark" />
                </div>
                <div class="col-8">
                    <RadzenTextArea Name="CondensateWaterCutMeterRemark" class="w-100" Placeholder="Enter remark..." @bind-Value="@Item.CondensateWaterCutMeterRemark" Disabled=@isViewing></RadzenTextArea>
                </div>
            </div>
            <div class="row py-2">
                <div class="col-4 align-items-center d-flex">
                    <RadzenLabel class="dialogTextSize" Text="Oil In Water Reading (PPM)" />
                </div>
                <div class="col-8">
                    <RadzenNumeric Name="OilInWaterReading" class="w-100" @bind-Value="@Item.OilInWaterReading" Disabled=@isViewing
                    Placeholder="Enter oil in water reading (PPM) ..." TextProperty="OilInWaterReading"></RadzenNumeric>
                </div>
            </div>
            <div class="row py-2">
                <div class="col-4 align-items-center d-flex">
                    <RadzenLabel class="dialogTextSize" Text="Oil In Water Reading Remark" />
                </div>
                <div class="col-8">
                    <RadzenTextArea Name="OilInWaterReadingRemark" class="w-100" Placeholder="Enter remark..." @bind-Value="@Item.OilInWaterReadingRemark" Disabled=@isViewing></RadzenTextArea>
                </div>
            </div>
            <div class="row py-2">
                <div class="col-4 align-items-center d-flex">
                    <RadzenLabel class="dialogTextSize" Text="Date" />
                </div>
                <div class="col-8">
                    <RadzenDatePicker class="w-100" DateFormat="d" @bind-Value="@Item.DateUI" ShowTime="false" Disabled=@isViewing></RadzenDatePicker>
                </div>
            </div>
    </ChildContent>
</DailyDialog>