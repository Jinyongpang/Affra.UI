                    Placeholder="Enter FPSO fuel gas consumption (MMscf) ..." TextProperty="FPSOFuelGasConsumption"></RadzenNumeric>
                </div>
            </div>
            <div class="row py-2">
                <div class="col-4 align-items-center d-flex">
                    <RadzenLabel class="dialogTextSize" Text="FPSO Fuel Gas Consumption Remark" />
                </div>
                <div class="col-8">
                    <RadzenTextArea Name="FPSOFuelGasConsumptionRemark" class="w-100" Placeholder="Enter remark..." @bind-Value="@Item.FPSOFuelGasConsumptionRemark" Disabled=@isViewing></RadzenTextArea>
                </div>
            </div>
            <div class="row py-2">
                <div class="col-4 align-items-center d-flex">
                    <RadzenLabel class="dialogTextSize" Text="Date" />
                </div>
                <div class="col-8">
                    <RadzenDatePicker class="w-100" DateFormat="d" @bind-Value="@Item.DateUI" ShowTime="false" Disabled=@isViewing></RadzenDatePicker>
                </div>
            </div>
    </ChildContent>
</DailyDialog>