@using JXNippon.CentralizedDatabaseSystem.Models
@using ManagementOfChangeODataService.Affra.Service.ManagementOfChange.Domain.SCEElements

<RadzenTemplateForm Data="@Item" Submit="@( async (SCEElementGroupRecord args) => { await SubmitAsync(args); })">
    <div class="row">
        <div class="col">
            <div class="row py-2">
                <div class="col-4 align-items-center d-flex">
                    <RadzenLabel class="dialogTextSize" Text="Group Name" />
                </div>
                <div class="col-8">
                    <RadzenTextBox Name="SCEGroupName" class="w-100" Placeholder="Enter sce group name..." @bind-Value="@Item.Name"></RadzenTextBox>
                    <RadzenRequiredValidator Component="SCEGroupName" Text="SCE group name is required" Popup=false />
                </div>
            </div>
            <div class="row justify-content-center py-4" >
                <div class="col-md-12 d-flex align-items-end justify-content-center">
                    <RadzenButton ButtonType="ButtonType.Submit" Icon="save" Text="Save" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Icon="cancel" style="display: inline-block; margin-left: 10px;" Text="Cancel" Click="@Cancel" />
                </div>
            </div>
        </div>
    </div>
</RadzenTemplateForm>
