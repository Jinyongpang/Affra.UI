@using CentralizedDatabaseSystemODataService.Affra.Service.CentralizedDatabaseSystem.Domain.GlycolRegenerationSystems

<div class="row">
    <div class="col">
        <RadzenButton Click="@ReloadAsync" Text="Refresh" Icon="refresh" ButtonStyle="ButtonStyle.Light" Style="margin-bottom: 20px;" Visible="@ShowRefreshButton" />
        <RadzenDataGrid @ref="grid" IsLoading="@isLoading" Count="@Count" Data="@items" LoadData="@LoadDataAsync" 
            FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive" AllowSorting="true" AllowFiltering="false" AllowPaging="true" 
            PageSize="10" PagerHorizontalAlign="HorizontalAlign.Center" TItem="DailyGlycolTrain" 
            ColumnWidth="200px" AllowColumnResize="true" ShowPagingSummary="true" 
            AllowMultiColumnSorting="true" ShowMultiColumnSortingIndex="true"
            PagerAlwaysVisible="@PagerAlwaysVisible">

            <Columns>
                <RadzenDataGridColumn TItem="DailyGlycolTrain" Property="GlycolTrainName" Title="Glycol Train Name" />
                <RadzenDataGridColumn TItem="DailyGlycolTrain" Property="PreviousDayLevel" Title="Previous Day Level (mm)" />
                <RadzenDataGridColumn TItem="DailyGlycolTrain" Property="TodayReportLevel" Title="Today Report Level (mm)" />
                <RadzenDataGridColumn TItem="DailyGlycolTrain" Property="LevelDrop" Title="Level Drop" />
                <RadzenDataGridColumn TItem="DailyGlycolTrain" Property="Indicator" Title="Indicator (mm / MMSCFD)" />
                <RadzenDataGridColumn TItem="DailyGlycolTrain" Property="IndicatorGuide" Title="Guide" />
                <RadzenDataGridColumn TItem="DailyGlycolTrain" Property="FlowRate" Title="Flowrate (kg/hr)" />
                <RadzenDataGridColumn TItem="DailyGlycolTrain" Property="PH" Title="pH" />
                <RadzenDataGridColumn TItem="DailyGlycolTrain" Property="Date" Title="Date" SortOrder="SortOrder.Descending" Visible="@ShowDateColumn">
                    <Template Context="item">
                        @String.Format(System.Globalization.CultureInfo.CurrentCulture, "{0:d}", item.Date.ToLocalTime())
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>  
    </div>
</div>