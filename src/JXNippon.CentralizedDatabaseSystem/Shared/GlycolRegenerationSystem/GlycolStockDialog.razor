@using CentralizedDatabaseSystemODataService.Affra.Service.CentralizedDatabaseSystem.Domain.GlycolRegenerationSystems
@using JXNippon.CentralizedDatabaseSystem.Models

<RadzenTemplateForm Data="@Item" Submit="@( async (DailyGlycolStock args) => { await SubmitAsync(args); })">
    <div class="row">
        <div class="col">
            <RadzenCard>
                 <div class="row py-2">
                    <div class="col-4 align-items-center d-flex">
                        <RadzenLabel class="dialogTextSize" Text="Glycol Stock In Tote Tank" />
                    </div>
                    <div class="col-8">
                       <RadzenNumeric Name="GlycolStockInToteTank" class="w-100" @bind-Value="@Item.GlycolStockInToteTank" Data="@datas" Disabled=@isViewing
                       Placeholder="Enter glycol stock in tote tank ..." TextProperty="GlycolStockInToteTank"></RadzenNumeric>
                    </div>
                </div>
                <div class="row py-2">
                    <div class="col-4 align-items-center d-flex">
                        <RadzenLabel class="dialogTextSize" Text="Glycol Stock In Drum" />
                    </div>
                    <div class="col-8">
                       <RadzenNumeric Name="GlycolStockInDrum" class="w-100" @bind-Value="@Item.GlycolStockInDrum" Data="@datas" Disabled=@isViewing
                       Placeholder="Enter glycol stock in drum ..." TextProperty="GlycolStockInDrum"></RadzenNumeric>
                    </div>
                </div>
                <div class="row py-2">
                    <div class="col-4 align-items-center d-flex">
                        <RadzenLabel class="dialogTextSize" Text="Date" />
                    </div>
                    <div class="col-8">
                        <RadzenDatePicker class="w-100" DateFormat="d" @bind-Value="@Item.DateUI" ShowTime="false" Disabled=@isViewing></RadzenDatePicker>
                    </div>
                </div>
                <div class="row justify-content-center py-4" hidden=@isViewing>
                    <div class="col-md-12 d-flex align-items-end justify-content-center">
                        <RadzenButton ButtonType="ButtonType.Submit" Icon="save" Text="Save" Disabled=@isViewing/>
                        <RadzenButton ButtonStyle="ButtonStyle.Light" Icon="cancel" style="display: inline-block; margin-left: 10px;" Text="Cancel" Click="@Cancel"/>
                    </div>
                </div>
            </RadzenCard>
        </div>
    </div>
</RadzenTemplateForm>
