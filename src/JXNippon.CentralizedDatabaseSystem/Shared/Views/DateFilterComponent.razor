@using JXNippon.CentralizedDatabaseSystem.Domain.Filters

@if(this.DateFilter.DateFilterType == DateFilterType.Range)
{
    <DateRangeFilterComponent FixDateTime="@this.FixDateTime" @ref=@Filter Title=@this.Column.Title></DateRangeFilterComponent>
}
else if(this.DateFilter.DateFilterType == DateFilterType.Month)
{
    <MonthFilterComponent FixDateTime="@this.FixDateTime" @ref=@Filter Title=@this.Column.Title></MonthFilterComponent>
}
else if(this.DateFilter.DateFilterType == DateFilterType.NinetyMonth)
{
    <NinetyDaysFilterComponent FixDateTime="@this.FixDateTime" @ref=@Filter Title=@this.Column.Title></NinetyDaysFilterComponent>
}
else if(this.DateFilter.DateFilterType == DateFilterType.LastXPeriod)
{
    <LastXPeriodFilterComponent FixDateTime="@this.FixDateTime" @ref=@Filter Title=@this.Column.Title></LastXPeriodFilterComponent>
}
else if(this.DateFilter.DateFilterType == DateFilterType.HorizontalMonth)
{
    <HorizontalMonthFilterComponent FixDateTime="@this.FixDateTime" @ref=@Filter Title=@this.Column.Title></HorizontalMonthFilterComponent>
}
else if(this.DateFilter.DateFilterType == DateFilterType.SingleDate)
{
    <SingleDateRangeFilterComponent FixDateTime="@this.FixDateTime" @ref=@Filter Title=@this.Column.Title></SingleDateRangeFilterComponent>
}
else if (this.DateFilter.DateFilterType == DateFilterType.Year)
{
    <YearFilterComponent FixDateTime="@this.FixDateTime" @ref=@Filter Title=@this.Column.Title></YearFilterComponent>
}