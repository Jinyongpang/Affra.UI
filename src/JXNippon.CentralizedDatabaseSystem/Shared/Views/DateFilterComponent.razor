@using JXNippon.CentralizedDatabaseSystem.Domain.Filters

@if(this.DateFilter.DateFilterType == DateFilterType.Range)
{
    <DateRangeFilterComponent @ref=@Filter Title=@this.Column.Title></DateRangeFilterComponent>
}
else if(this.DateFilter.DateFilterType == DateFilterType.Month)
{
    <MonthFilterComponent @ref=@Filter Title=@this.Column.Title></MonthFilterComponent>
}
else if(this.DateFilter.DateFilterType == DateFilterType.NinetyMonth)
{
    <NinetyDaysFilterComponent @ref=@Filter Title=@this.Column.Title></NinetyDaysFilterComponent>
}
else if(this.DateFilter.DateFilterType == DateFilterType.LastXPeriod)
{
    <LastXPeriodFilterComponent @ref=@Filter Title=@this.Column.Title></LastXPeriodFilterComponent>
}
else if(this.DateFilter.DateFilterType == DateFilterType.HorizontalMonth)
{
    <HorizontalMonthFilterComponent @ref=@Filter Title=@this.Column.Title></HorizontalMonthFilterComponent>
}